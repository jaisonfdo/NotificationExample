<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification_sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="droidmentor.notificationsample.NotificationSampleActivity">

    <LinearLayout
        android:padding="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Standard"
            android:layout_marginTop="@dimen/inbetween_space"
            style="@style/action_button"
            android:id="@+id/btn_simple" />

        <Button
            android:text="Heads-up"
            android:layout_marginTop="@dimen/inbetween_space"
            style="@style/action_button"
            android:id="@+id/btn_action"/>

        <Button
            android:text="Remote Input"
            android:layout_marginTop="@dimen/inbetween_space"
            style="@style/action_button"
            android:id="@+id/btn_remote" />

        <Button
            android:text="Summary"
            android:layout_marginTop="@dimen/inbetween_space"
            style="@style/action_button"
            android:id="@+id/btn_summary" />

    </LinearLayout>

</RelativeLayout>
